{
    "version": "0.2.0",
    "configurations": [
		{
			"name": "(gdb) Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/cub3D",
			"args": ["${workspaceFolder}/map/d.cub"],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
			],
			"preLaunchTask": "build",
			"miDebuggerPath": "/usr/bin/gdb",
			"logging": {
				"trace": true,
				"traceResponse": false,
				"engineLogging": false,
				"programOutput": false,
				"exceptions": true
			}
		},
    ]
}
